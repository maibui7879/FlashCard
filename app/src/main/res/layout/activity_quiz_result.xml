<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/blue_secondary"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/blue_primary"
        app:strokeWidth="2dp"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvResultTitle"
                android:text="Kết quả"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/blue_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvScore"
                android:text="8 / 10"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/blue_primary"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/progressPercent"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="8dp"
                android:progress="80"
                android:max="100"
                android:progressTint="@color/blue_primary"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvRecord"
                android:text="Kỷ lục: 0 / 10"
                android:textSize="16sp"
                android:textColor="@color/blue_primary"
                android:textStyle="italic"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRetryQuiz"
                    android:text="Làm lại"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/blue_secondary"
                    android:textColor="@color/blue_primary"
                    app:strokeColor="@color/blue_primary"
                    app:strokeWidth="2dp"
                    app:cornerRadius="12dp"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackResult"
                    android:text="Về trước"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/blue_secondary"
                    android:textColor="@color/blue_primary"
                    app:strokeColor="@color/blue_primary"
                    app:strokeWidth="2dp"
                    app:cornerRadius="12dp"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
