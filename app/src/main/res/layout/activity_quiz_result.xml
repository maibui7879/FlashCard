<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center_horizontal"
    android:padding="24dp" android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvResultTitle"
        android:text="Kết quả" android:textStyle="bold" android:textSize="20sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvScore"
        android:text="8 / 10" android:textSize="18sp" android:layout_marginTop="16dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvPercent"
        android:text="80%" android:textSize="16sp" android:layout_marginTop="8dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRetry" android:text="Làm lại"
        android:layout_marginTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnBack" android:text="Về trước"
        android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
