<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Dùng API tra cứu nghĩa nên cần Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlashCard">

        <!-- MÀN HÌNH MỞ ĐẦU: Danh sách Bộ thẻ -->
        <activity
            android:name=".ui.SetListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Màn hình chi tiết 1 bộ thẻ -->
        <activity
            android:name=".ui.SetActivity.SetActivity"
            android:exported="false" />

        <!-- Quiz -->
        <activity
            android:name=".ui.QuizActivity"
            android:exported="false" />
        <activity
            android:name=".ui.QuizResultActivity"
            android:exported="false" />
        <activity
            android:name=".ui.QuizHistoryActivity"
            android:exported="false" />

        <!-- MainActivity (không còn là launcher, vẫn khai báo nếu còn dùng nội bộ) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>
</manifest>
